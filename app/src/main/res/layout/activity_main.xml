<?xml version="1.0" encoding="utf-8"?>
<example.newsclient.util.SlidingMenu
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    app:rightPadding="100dp"
    android:id="@+id/sliding_menu"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include layout="@layout/layout_menu"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_bg"
   >
    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:title="广交院实训版"
        />

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/view_pager"
        ></android.support.v4.view.ViewPager>

  <!--分界线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>
    <!--界面底部的选项卡-->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/radio_group"
        android:orientation="horizontal"
        >
        <RadioButton
            android:checked="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/radio_btn1"
            android:button="@null"
            android:drawableTop="@drawable/selector_home_tab_01"
            android:gravity="center"
            android:padding="0dp"
            android:text="新闻"
            android:textColor="@color/selector_home_tab_color"
            android:textSize="12sp"
            />
        <!--android:button="@null"去掉前面的圆点-->
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/radio_btn2"
            android:button="@null"
            android:drawableTop="@drawable/selector_home_tab_02"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="视听"
            android:textColor="@color/selector_home_tab_color"
            android:textSize="12sp"
            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/radio_btn3"
            android:button="@null"
            android:drawableTop="@drawable/selector_home_tab_03"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="阅读"
            android:textColor="@color/selector_home_tab_color"
            android:textSize="12sp"
            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/radio_btn4"
            android:button="@null"
            android:drawableTop="@drawable/selector_home_tab_04"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="发现"
            android:textColor="@color/selector_home_tab_color"
            android:textSize="12sp"
            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/radio_btn5"
            android:button="@null"
            android:drawableTop="@drawable/selector_home_tab_05"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="设置"
            android:textColor="@color/selector_home_tab_color"
            android:textSize="12sp"
            />

    </RadioGroup>
</LinearLayout>
    </LinearLayout>
</example.newsclient.util.SlidingMenu>